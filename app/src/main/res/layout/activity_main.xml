<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="#f180ec">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                app:srcCompat="@drawable/fruitsandvege" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:fontFamily="serif"
                android:text="Welcome To Learn Fruits And Vegetables In A Fun Way."
                android:textAlignment="center"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/round_buttons"
                android:elevation="2dp"
                android:fontFamily="serif"
                android:onClick="typesOfFruits"
                android:text="Types Of Fruits."
                android:textColor="#ffff"
                android:textStyle="bold" />

            <Button
                android:id="@+id/typesOfVegetables"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/vegetableround"
                android:elevation="2dp"
                android:fontFamily="serif"
                android:onClick="typesOfVegetables"
                android:text="Types Of Vegetables."
                android:textColor="#ffff"
                android:textStyle="bold" />

            <Button
                android:id="@+id/typesOfMinerals"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/mineral_round"
                android:elevation="2dp"
                android:fontFamily="serif"
                android:onClick="typesOfMinerals"
                android:shadowColor="@color/colorAccent"
                android:shadowDx="1.2"
                android:shadowDy="1.2"
                android:shadowRadius="2.2"
                android:text="Types Of Minerals."
                android:textColor="#ffff"
                android:textStyle="bold" />

            <Button
                android:id="@+id/quiz"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/quiz_round"
                android:elevation="2dp"
                android:fontFamily="serif"
                android:onClick="quiz"
                android:shadowColor="@color/colorAccent"
                android:shadowDx="1.2"
                android:shadowDy="1.2"
                android:shadowRadius="2.2"
                android:text="Quiz."
                android:textColor="#ffff"
                android:textStyle="bold" />
        </LinearLayout>

    </ScrollView>



</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.george.children_fruit_and_vegetable_learning_application">

    <application
        android:allowBackup="true"
        android:icon="@drawable/fruitsandvege"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".typesOfFruits"
            android:label="Types Of Fruits"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity
            android:name=".allFruits"
            android:label="@string/all"
            android:parentActivityName=".typesOfFruits">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".typesOfFruits" />
        </activity>
        <activity android:name=".quiz_Layout" />
        <activity
            android:name=".view_berries"
            android:label="Types of Fruits"
            android:parentActivityName=".typesOfFruits">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".typesOfFruits" />
        </activity>
        <activity android:name=".single_fruit"
                  android:label="Berries"
                  android:parentActivityName=".view_berries"></activity>
    </application>

</manifest>